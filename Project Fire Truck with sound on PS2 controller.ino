  aux = map(JoyEsquerdaY, 130, 255, 20, 255); // Converte os valores do joystick para o padr칚o PWM de 0 a 255 (neste caso iniciei em 20 pois valores abaixo disso n칚o conseguem acionar o motor)
  analogWrite(5, aux);                 // ativa pino ponte H com o valor da vari치vel aux (controle de acelera칞칚o)
  analogWrite(6, LOW);                 // configura o pino ponte H com valor LOW para que o ve칤culo ande para tr치s


  digitalWrite(4, HIGH); //Acende Luz de R칠
  cont = 0;

} else {               // MOTOR PARADO
  analogWrite(5, LOW); // desativa as duas portas da ponte h
  analogWrite(6, LOW); // desativa as duas portas da ponte h

  cont ++;
  if (cont == 1) {
    digitalWrite(4, LOW); //Apaga Luz de R칠
  }
  cont = 2;

  digitalWrite(3, digitalRead(2)); // Se o motor estiver parado, verifica se o farol (D2) esta aceso, se estiver mant칠m a Lanterna (D3) acesa, se n칚o apaga
}
